<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.studio.fields</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group/group[7]" position="after">
                <group>
                    <field name="medical_conditions" groups="base.group_erp_manager"/>
                </group>
            </xpath>
            <!-- <xpath expr="//button[@name='hr_presence_button']" position="replace"/> -->
            <xpath expr="//group[@name='active_group']" position="inside">
              <field name="prescription_safety_glasses"/>
            </xpath>
            <xpath expr="//group[@name='identification_group']" position="replace"/>
            <xpath expr="//page[@name='hr_settings']" position="attributes">
              <attribute name="string">Safety Information</attribute>
            </xpath>
        </field>
    </record>

</odoo>