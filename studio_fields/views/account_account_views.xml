<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_account_tree_inherit_studio_fields" model="ir.ui.view">
      <field name="name">account.account.tree.inherit.studio.fields</field>
      <field name="model">account.account</field>
      <field name="inherit_id" ref="account.view_account_list"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="attributes">
          <field name="invisible">1</field>
        </xpath>
        <xpath expr="//tree[1]/field[@name='name']" position="after">
          <field name="group_id"/>
          <field name="opening_credit"/>
          <field name="opening_debit"/>
        </xpath>
      </field>
    </record>
</odoo>
