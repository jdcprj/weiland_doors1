<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">project.task.form.inherit.studio.fields</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='sequence']" position="before">
            <field name="work_orders_ids"/>
            <field name="sale_order_line_id"/>
            <field name="opening_number"/>
          </xpath>
        </field>
    </record>

    <record id="view_project_kanban_inherit_studio_fields" model="ir.ui.view">
        <field name="name">project.kanban.inherit.studio.fields</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='name']" position="after">
          <field display="full" name="sale_order_line_id" domain="[('opening_number','!=',False)]"/>
        </xpath>
      </field>
    </record>
</odoo>
