<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_line_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.studio.fields</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='account_id']" position="attributes">
              <attribute name="attrs">{"readonly": [("parent_state","!=","posted")]}</attribute>
            </xpath>
            <xpath expr="//field[@name='move_id']" position="attributes">
              <attribute name="attrs">{"readonly": [("parent_state","!=","posted")]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>