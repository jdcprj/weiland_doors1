<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.studio.fields</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
    	   <xpath expr="//field[@name='state']" position="attributes">
              <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
              <attribute name="attrs">{"invisible": [("payment_type","not in",["inbound","outbound"])], "readonly": [("state","!=","draft")], "required": [("state","=","draft"),("payment_type","in",["inbound","outbound"])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount']" position="attributes">
              <attribute name="attrs">{"readonly": [("state","!=","draft")]}</attribute>
            </xpath>
            <xpath expr="//field[@name='communication']" position="attributes">
              <attribute name="attrs">{"invisible": [("state","!=","draft"),("communication","=",False)], "readonly": [("state","!=","draft")]}</attribute>
            </xpath>
            <xpath expr="//field[@name='check_number']" position="attributes">
              <attribute name="attrs">{"invisible": ["|",("payment_method_code","!=","check_printing"),("check_number","=",0)]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]" position="after">
              <field name="invoice_ids"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">account.payment.search.inherit.studio.fields</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search[1]/separator[3]" position="after">
              <filter context="{'group_by': 'payment_date'}" name="payment_date" string="Payment Date"/>
            </xpath>
        </field>
    </record>

</odoo>