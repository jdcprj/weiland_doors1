<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_routing_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.routing.form.inherit.studio.fields</field>
        <field name="model">mrp.routing</field>
        <field name="inherit_id" ref="mrp.mrp_routing_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='name']" position="after">
            <field name="sequence"/>
          </xpath>
        </field>
    </record>

    <record id="view_mrp_routing_tree_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.routing.tree.inherit.studio.fields</field>
        <field name="model">mrp.routing</field>
        <field name="inherit_id" ref="mrp.mrp_routing_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
              <field name="sequence"/>
            </xpath>
        </field>
    </record>

</odoo>