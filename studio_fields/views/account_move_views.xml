<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">account.move.form.inherit.studio.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='date']" position="attributes">
              <attribute name="attrs">{"readonly": [("state","=","posted")]}</attribute>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="attributes">
              <attribute name="attrs">{"readonly": [("state","=","draft")]}</attribute>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="job_name"/>
                <field name="customer_reference"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">account.move.search.inherit.studio.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="before">
              <field name="name"/>
              <field name="ref"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
              <field name="amount_residual_signed"/>
            </xpath>
        </field>
    </record>

</odoo>
