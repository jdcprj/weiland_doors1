<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_workorder_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.workorder.form.inherit.studio.fields</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="attributes">
          <attribute name="widget">selection</attribute>
        </xpath>
        <xpath expr="//field[@name='product_id']" position="after">
          <field name="sale_order_id"/>
          <field name="sale_order_line_id"/>
          <field name="customer_po" string="Customer PO#"/>
          <field name="job_name" string="Job Name"/>
          <field name="opening_number"/>
        </xpath>
        </field>
    </record>

    <record id="view_mrp_workorder_tree_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.workorder.tree.inherit.studio.fields</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='production_id']" position="after">
              <field name="sale_order_id" string="Sales Order #_WO"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
              <field name="qty_producing"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_workorder_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.workorder.search.inherit.studio.fields</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_workorder_form_view_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='work_center']" position="after">
              <filter context="{'group_by': 'name'}" name="group_work_order" string="Work Order"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_workorder_kanban_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.workorder.kanban.inherit.studio.fields</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.workcenter_line_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
              <field name="stage_id"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
              <field name="customer_po"/>
              <field name="job_name"/>
            </xpath>
        </field>
    </record>

</odoo>