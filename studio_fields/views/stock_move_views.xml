<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.form.inherit.studio.fields</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='group_id']" position="after">
                <field name="procurement_group_id"/>
                <field name="production_id_2"/>
                <field name="customer_name"/>
                <field name="so_job_name"/>
                <field name="stock_invoice_status"/>
                <field name="so_customer_id"/>
                <field name="job_name"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_tree_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.tree.inherit.studio.fields</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
              <field name="customer_name"/>
              <field name="so_customer_id"/>
              <field name="job_name"/>
              <field name="so_job_name"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.search.inherit.studio.fields</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='by_product']" position="after">
              <filter context="{'group_by': 'supplier_name'}" name="supplier_name" string="Supplier Name"/>
            </xpath>
        </field>
    </record>

</odoo>
