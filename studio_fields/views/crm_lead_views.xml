<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_form_view_inherit_studio_fields" model="ir.ui.view">
        <field name="name">crm.lead.form.view.studio.fields</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[4]" position="replace"/>
            <xpath expr="//group[1]/group[3]" position="replace"/>

            <xpath expr="//group[1]/group[2]/field[@name='partner_id']" position="after">
                <field name="project_type"/>
                <field name="account_manager_id"/>
                <field name="crsr_id"/>
                <field name="new_priority" widget="priority"/>
                <field name="region"/>
            </xpath>

            <xpath expr="//group[1]/group[1]/field[@name='partner_id']" position="after">
                <field name="project_type"/>
                <field name="account_manager_id"/>
                <field name="lead_source"/>
                <field name="planned_revenue"/>
                <field name="new_priority"/>
                <field name="other_key_players"/>
                <field name="user_id" invisible="1"/>
                <field name="team_id" attrs="{'invisible': [('type', '=', 'opportunity')]}"/>
            </xpath>

            <xpath expr="//group[1]/group[1]/field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[1]/group[2]/field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='email_from']" position="replace"/>
            <xpath expr="//field[@name='email_from']" position="replace"/>
            <xpath expr="//field[@name='phone']" position="replace"/>

            <xpath expr="//form/sheet/group[1]/group[1]" position="attributes">
                <attribute name="string">Project Data</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group[3]" position="replace">
                <group string="Project Info" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <field name="hot_or_high_vis_project"/>
                    <field name="lead_reference2"/>
                    <field name="lead_source"/>
                    <field name="project_scope"/>
                    <field name="project_timeline"/>
                    <field name="customer_project_estimated_completion_date"/>
                    <field name="other_key_players"/>
                </group>
                <group string="Additional Project Data" attrs="{'invisible': [('type', '=', 'opportunity')]}">
                    <field name="hot_or_high_vis_project"/>
                </group>
            </xpath>

            <xpath expr="//group[1]/group[1]/field[@name='partner_name']" position="replace"/>
            <xpath expr="//group[1]/group[1]/label" position="replace"/>
            <xpath expr="//group[1]/group[1]/div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//group[1]/group[1]/field[@name='website']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[1]/group[1]/field[@name='lang_id']" position="replace"/>

            <xpath expr="//field[@name='priority']" position="replace"/>
            <xpath expr="//field[@name='tag_ids']" position="replace"/>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']/group//group[@name='Misc']//field[@name='type']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']" position="attributes">
                <attribute name="string">End user</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']/group//group[1]" position="attributes">
                <attribute name="string">Customer Information</attribute>
                <attribute name="class" add="mt48" separator=" "/>
            </xpath>
            <xpath expr="//page[@name='lead']/group//group[2]" position="attributes">
                <attribute name="string">Contact Information</attribute>
            </xpath>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='street']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//label[@for='street']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='street2']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='country_id']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='state_id']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='zip']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='city']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='website']" position="replace"/>
            <xpath expr="//page[@name='lead']/group//group[1]//field[@name='lang_id']" position="replace"/>
            <xpath expr="//page[@name='lead']" position="after">
                <page string="Architect" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <group>
                        <group name="architect">
                            <field name="contact_architect_id"/>
                            <field name="specified_door_mfg"/>
                        </group>
                    </group>
                </page>
                <page string="Bidder List" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <group>
                        <field name="bids_ids">
                            <tree string="Bids">
                                <field name="bidder_id"/>
                                <field name="bidder_overdue"/>
                                <field name="chance_to_bid"/>
                                <field name="quoted"/>
                                <field name="our"/>
                            </tree>
                            <form>
                                <sheet string="Bids" name="bids">
                                  <group>
                                    <group>
                                      <field name="bidder_id" string="Bidder"/>
                                      <field name="opportunity_id" string="Opportunity"/>
                                      <field name="sale_id"/>
                                      <field name="bidder_overdue"/>
                                    </group>
                                    <group>
                                      <field name="chance_to_bid" string="Chance to Bid"/>
                                      <field name="quoted" string="Quoted"/>
                                      <field name="our" string="Our $"/>
                                    </group>
                                  </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
                <page string="Sales Management" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <group>
                        <group string="Project Qual's">
                            <field name="contacted"/>
                            <field name="specd_or_qualified"/>
                            <field name="architect_educated"/>
                            <field name="documents_release_date"/>
                            <field name="documents_received"/>
                        </group>
                        <group string="Project Fit for Weiland">
                            <field name="fit_score"/>
                            <field name="qualified"/>
                            <field name="how_did_we_do"/>
                        </group>
                    </group>
                    <group>
                        <group string="Bidder Details">
                            <field name="bid_due_date"/>
                            <field name="all_bids_sent"/>
                            <field name="expected_decision_by"/>
                            <field name="follow_up_scheduled"/>
                            <field name="follow_up_complete"/>
                        </group>
                        <group string="Right Title">
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="date_closed"/>
                        </group>
                    </group>
                </page>
                <page string="High level Project details" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <div class="o_row">
                        <label for="project_notes" class="oe_inline"/>
                        <field name="project_notes" />
                    </div>
                    <group>
                        <group string="Personnel Doors">
                            <field name="single_fg_personnel_doors"/>
                            <field name="dbl_fg_personnel_doors"/>
                            <field name="single_ss_personnel_doors"/>
                            <field name="dbl_ss_personnel_doors"/>
                            <field name="nchm_doors"/>
                        </group>
                        <group string="Infit Doors">
                            <field name="fg_infits"/>
                            <field name="hd_ss_infits"/>
                            <field name="sd_ss_infit"/>
                            <field name="wpg_infit"/>
                        </group>
                    </group>
                    <group>
                        <group string="Windows">
                            <field name="heated_windows"/>
                            <field name="insulated_windows"/>
                            <field name="polycoating"/>
                            <field name="polycarbonate_windows"/>
                            <field name="polycarbonate_type"/>
                        </group>
                        <group string="Sliding Doors">
                            <field name="fg_hsd"/>
                            <field name="ss_hsd"/>
                            <field name="wpg_hsd"/>
                            <field name="fg_vsd"/>
                            <field name="ss_vsd"/>
                            <field name="wpg_vsd"/>
                        </group>
                    </group>
                </page>
                <page string="Contact Details" attrs="{'invisible': [('type', '=', 'lead')]}">
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="partner_address_phone" string="office phone"/>
                            <field name="phone"/>
                            <field name="is_blacklisted"/>
                            <field name="email_from"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                </page>
            </xpath>

            <xpath expr="//page[@name='extra']/group/group[1]" position="before">
                <group string="Partner Info" name="partner_info">
                    <field name="tag_ids"/>
                    <field name="partner_id"/>
                    <field name="partner_name"/>
                    <label for="street" string="Address"/>
                    <div class="o_address_format">
                        <field name="street" placeholder="Street..." class="o_address_street"/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                        <field name="city" placeholder="City" class="o_address_city"/>
                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True}"/>
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
                    </div>
                </group>
                <group string="" name="contact_info">
                    <field name="contact_name"/>
                    <field name="title"/>
                    <field name="email_from"/>
                    <field name="function"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='extra']" position="attributes">
                <attribute name="string">Project Info</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_crm_lead_kanban_inherit_studio_fields" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit.studio.fields</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban[1]" position="attributes">
              <attribute name="quick_create">false</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
              <field name="new_priority" widget="priority" default_value="0"/>
            </xpath>
            <xpath expr="//kanban[1]/templates[1]/t[1]/div[1]/div[2]/div[4]/div[1]/field[@name='priority']" position="attributes">
              <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_crm_lead_tree_inherit_studio_fields" model="ir.ui.view">
        <field name="name">crm.lead.tree.inherit.studio.fields</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
              <field name="bids_ids"/>
              <field name="architecture_firm"/>
              <field name="other_key_players"/>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='activity_date_deadline']" position="after">
              <field name="won_status"/>
            </xpath>
            <xpath expr="//field[@name='activity_summary']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree[1]/field[@name='probability']" position="after">
              <field name="region"/>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
              <field name="crsr_id"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
              <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_crm_lead_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">crm.lead.search.inherit.studio.fields</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='salesperson']" position="replace">
              <filter context="{'group_by': 'crsr_id'}" name="group_crsr_id" string="Estimator &amp; CSR"/>
              <filter context="{'group_by': 'account_manager_id'}" name="group_account_manager" string="Account Manager"/>
            </xpath>
            <xpath expr="//filter[@name='saleschannel']" position="after">
              <filter context="{'group_by': 'won_status'}" name="group_won_status" string="Is Won"/>
            </xpath>
        </field>
    </record>
</odoo>
