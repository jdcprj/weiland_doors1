<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit.studio.fields</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]" position="attributes">
                <attribute name="edit">1</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="production_id"/>
                <field name="sale_order_id"/>
                <field name="so_job_name_1"/>
                <field name="so_customer"/>
                <field name="so_customer"/>
                <field name="so_line_opening_number"/>
                <field name="invoice_status"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="replace"/>
            <xpath expr="//field[@name='lot_id']" position="replace">
                <field name="studio_on_hand_qty"/>
                <field name="initial_demand"/>
                <field name="forecast_qty_1"/>
                <field name="qty_done"/>
                <field name="lot_id"/>
                <field name="product_type"/>
                <field name="internal_reference_1"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.line.search.inherit.studio.fields</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='by_state']" position="after">
              <filter context="{'group_by': 'invoice_status'}" name="invoice_status" string="SO Invoice Status"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_kanban_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.line.kanban.inherit.studio.fields</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="after">
              <field display="full" name="initial_demand"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_tree_inherit_studio_fields" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit.studio.fields</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
              <field name="production_id" attrs="{}" widget="many2one"/>
              <field name="so_customer"/>
              <field name="so_job_name_1"/>
              <field name="invoice_status" attrs="{}" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="after">
              <field name="studio_on_hand_qty"/>
              <field name="initial_demand" string="Initial Demand"/>
              <field name="forecast_qty_1"/>
            </xpath>
        </field>
    </record>
</odoo>