<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_attribute_value_search_inherit_studio_fields" model="ir.ui.view">
      <field name="name">product.attribute.value.search.inherit.studio.fields</field>
      <field name="model">product.attribute.value</field>
      <field name="arch" type="xml">
      	<search string="Attribute Value">
          <field name="name"/>
          <field name="attribute_id"/>
        </search>
      </field>
    </record>

    <record id="view_product_attribute_value_tree_inherit_studio_fields" model="ir.ui.view">
      <field name="name">product.attribute.value.tree.inherit.studio.fields</field>
      <field name="model">product.attribute.value</field>
      <field name="arch" type="xml">
        <tree string="Attribute Values" editable="bottom">
          <field name="attribute_id"/>
          <field name="name"/>
          <field name="is_custom"/>
          <field name="html_color"/>
        </tree>
      </field>
    </record>

    <record id="action_product_attribute_value" model="ir.actions.act_window">
      <field name="name">Attribute Value</field>
      <field name="res_model">product.attribute.value</field>
      <field name="view_mode">tree</field>
    </record>
</odoo>