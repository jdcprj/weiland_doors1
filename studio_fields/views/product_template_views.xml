<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">product.template.form.inherit.studio.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='attribute_line_ids']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="required">1</attribute>
        </xpath>
        <xpath expr="//field[@name='categ_id']" position="attributes">
          <attribute name="help">See Jason before selecting categoy</attribute>
        </xpath>
        <xpath expr="//field[@name='barcode']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="readonly">1</attribute>
        </xpath>
        <xpath expr="//field[@name='barcode']" position="after">
          <field name="sequence"/>
        </xpath>
        <xpath expr="//field[@name='taxes_id']" position="before">
          <field name="mark_up_percent" string="Mark-up %"/>
          <field name="mark_up_price" string="Mark-up Price"/>
        </xpath>
        <xpath expr="//field[@name='value_ids']" position="attributes">
          <attribute name="attrs">{}</attribute>
        </xpath>
        <xpath expr="//field[@name='volume']" position="attributes">
          <attribute name="help">The volume in in3.</attribute>
        </xpath>
        <xpath expr="//field[@name='property_stock_inventory']" position="after">
          <field name="is_inventory" string="Is Inventory"/>
        </xpath>
        <xpath expr="//field[@name='default_code']" position="attributes">
          <attribute name="string">Part Number</attribute>
        </xpath>
        </field>
    </record>

    <record id="view_product_template_tree_inherit_studio_fields" model="ir.ui.view">
      <field name="name">product.template.tree.inherit.studio.fields</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_id']" position="replace">
          <field name="lst_price"/>
        </xpath>
        <xpath expr="//field[@name='list_price']" position="replace"/>
        <xpath expr="//field[@name='virtual_available']" position="after">
          <field name="incoming_qty"/>
        </xpath>
      </field>
    </record>

    <record id="view_product_template_search_form_inherit_studio_fields" model="ir.ui.view">
      <field name="name">product.template.form.inherit.studio.fields</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="stock.product_template_search_form_view_stock"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//field[@name='categ_id']" position="after">
            <field name="default_code"/>
          </xpath>
        </data>
      </field>
    </record>
</odoo>