<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_form_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.studio.fields</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='state']" position="attributes">
                <attribute name="attrs">{"readonly": [["id","=",1]]}</attribute>
                <attribute name="widget">state_selection</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
              <field name="create_uid"/>
              <field name="customer_po_1" string="Customer PO#"/>
              <field name="job_name" string="Job Name"/>
              <field name="mo_so_opening" attrs="{'readonly': [['mo_so_opening','!=',False]]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_production_tree_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.production.tree.inherit.studio.fields</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='name']" position="after">
              <field name="date_finished"/>
            </xpath>
            <xpath expr="//field[@name='date_planned_start']" position="after">
              <field name="__last_update"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
              <field name="mo_so_opening" string="MO_SO opening #" required="1"/>
              <field name="sale_order_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_production_search_inherit_studio_fields" model="ir.ui.view">
        <field name="name">mrp.production.search.inherit.studio.fields</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search[1]/field[@name='name']" position="after">
              <field name="sale_order_id"/>
              <field name="origin"/>
            </xpath>
            <xpath expr="//filter[@name='product']" position="before">
              <filter context="{'group_by': 'origin'}" name="origin_source" string="Source"/>
            </xpath>
        </field>
    </record>

</odoo>