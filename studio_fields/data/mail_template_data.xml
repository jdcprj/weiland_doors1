<?xml version="1.0" ?>
<odoo>
    <data noupdate="0">
        <!--Email template -->
        <record id="email_template_drawing" model="mail.template">
            <field name="name">Review Initial Drawing</field>
            <field name="model_id" ref="studio_fields.model_sale_order"/>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="email_to">iap@odoo.com</field>
            <field name="subject">Review Initial Drawing</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear
        Please check this drawing.
        <br /><br />
        Do not hesitate to contact us if you have any questions.
    </p>
</div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_freight_company" model="mail.template">
            <field name="name">Freight Company Info</field>
            <field name="model_id" ref="studio_fields.model_sale_order"/>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="subject">Freight Company Info</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear
        Please check freight information.
        <br /><br />
        Do not hesitate to contact us if you have any questions.
    </p>
</div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
