<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_mrp_bom_config">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <t t-set="address">
                <div t-field="o.partner_id"
                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
            </t>
            <!--        <t t-if="o.dest_address_id">-->
            <!--            <t t-set="information_block">-->
            <!--                <strong>Shipping address:</strong>-->
            <!--                <div t-field="o.dest_address_id"-->
            <!--                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>-->
            <!--            </t>-->
            <!--        </t>-->
            <div class="page">
                <div class="oe_structure"/>
                
                <h2>MRP BOM Configuration <span t-field="o.name"/></h2>
                <div class="row mt32 mb32" id="informations">
                    <div class="col-auto mw-100 mb-2">
                        <strong>Sale Order Line:</strong>
                        <p class="m-0" t-field="o.so_line_id"/>
                    </div>
                    <div class="col-auto mw-100 mb-2">
                        <strong>Total Sale:</strong>
                        <p class="m-0" t-field="o.total_sale"/>
                    </div>
                    <div class="col-auto mw-100 mb-2">
                        <strong>Total Cost:</strong>
                        <p class="m-0" t-field="o.total_cost"/>
                    </div>
                </div>
                
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th name="th_product_tmpl"><strong>Product Template</strong></th>
                            <th name="th_product"><strong>Product</strong></th>
                            <th name="th_bom_qty" class="text-right"><strong>BOM Qty</strong></th>
                            <th name="th_sale_price" class="text-right"><strong>Sale Price</strong></th>
                            <th name="th_cost_price" class="text-right"><strong>Cost Price</strong></th>
                            <th name="th_total_qty" class="text-right"><strong>Total Qty</strong></th>
                            <th name="th_total_sales" class="text-right"><strong>Total Sales</strong></th>
                            <th name="th_total_cost" class="text-right"><strong>Total Costs</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.bom_product_ids" t-as="bom_line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
                                <td id="product">
                                    <span t-field="bom_line.product_tmpl_id.name"/>
                                </td>
                                <td>
                                    <span t-field="bom_line.product_variant_id"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="bom_line.qty"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="bom_line.sale_price"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="bom_line.cost_price"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="bom_line.total_qty"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="bom_line.total_sales"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="bom_line.total_costs"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    
    <template id="mrp_bom_config_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="mrp_configuration.report_mrp_bom_config" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
